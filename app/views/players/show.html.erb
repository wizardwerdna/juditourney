<h1 class="pageheader">Player <%=@player.full_name%></h1><br/>
<h3 class="block"><IMG SRC="<%= @player.image_url%>"/> (Image Url = "<%= @player.image_url%>")</h3>
<table>
	<tr>
		<th>Tournament</th>
		<th>Result</th>
		<th>Points</th>
	</tr>
<% for entry in @player.entries %>
	<tr>
		<th><%= link_to entry.tournament.league.name + '@' + entry.tournament.formatted_start, entry.tournament %></th>
		<th><%= entry.result %></th>
		<th><%= entry.points %></th>
	</tr>
<% end %>
</table>

<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
