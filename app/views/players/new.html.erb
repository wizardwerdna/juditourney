<h1 class="pagetitle">New player</h1>

<%= error_messages_for :player %>

<% form_for(@player) do |f| %>
  <p>
    <b>First</b><br />
    <%= f.text_field :first %>
  </p>

  <p>
    <b>Last</b><br />
    <%= f.text_field :last %>
  </p>


  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Image Url</b><br />
    <%= f.text_field :image_url %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', players_path %>
