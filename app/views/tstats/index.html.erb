<h1>Listing tstats</h1>

<table>
  <tr>
    <th>Hero chips</th>
    <th>Small blind</th>
    <th>Big blind</th>
    <th>Ante</th>
    <th>Current table size</th>
    <th>Number of players left</th>
    <th>Number of players at start</th>
    <th>Starting chips</th>
    <th>Added chips</th>
    <th>Maximum table size</th>
  </tr>

<% for tstat in @tstats %>
  <tr>
    <td><%=h tstat.hero_chips %></td>
    <td><%=h tstat.small_blind %></td>
    <td><%=h tstat.big_blind %></td>
    <td><%=h tstat.ante %></td>
    <td><%=h tstat.current_table_size %></td>
    <td><%=h tstat.number_of_players_left %></td>
    <td><%=h tstat.number_of_players_at_start %></td>
    <td><%=h tstat.starting_chips %></td>
    <td><%=h tstat.added_chips %></td>
    <td><%=h tstat.maximum_table_size %></td>
    <td><%= link_to 'Show', tstat %></td>
    <td><%= link_to 'Edit', edit_tstat_path(tstat) %></td>
    <td><%= link_to 'Destroy', tstat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

