<h1 class="block">Entries on <%= link_to @tournament.formatted_start, league_tournament_path(@tournament.league, @tournament) %>
</h1>
<div class="column1-unit">
	<table>
	<tr>
		<th>Position</th>
		<th class = "pic">Pic</th>
		<th>Player</th>
		<th>Points</th>
		<th>Buyin</th>
		<th>Payout</th>
		<% if logged_in? %>
			<td><%= link_to 'New Entry', new_tournament_entry_path(@tournament) %></td>
		<% end %>
	</tr>

	<% for entry in @tournament.entries.sort{|e1, e2| (e1.result || 0) <=> (e2.result || 0) } do %>
	<tr>
		<td><%= entry.result %></td>
		<td class="pic"><%= link_to entry.player.image_url_link, entry.player %></td>
		<td><%= link_to entry.player.full_name, entry.player %></td>
		<td><%= entry.points %></td>
		<td><%= entry.paid %></td>
		<td><%= entry.payout %></td>
		<% if logged_in? %>
			<td><%= link_to 'Edit', edit_tournament_entry_path(@tournament, entry) %> | <%= link_to 'Delete', tournament_entry_path(@tournament, entry), 
						:confirm => "Are you sure?", :method => :delete %></td>
		<% end %>
	</tr>
	<% end %>
	</table>
</div>