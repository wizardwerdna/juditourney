<% breadcrumbs_for home_crumb, leagues_crumb, league_crumb(@tournament.league), 
	league_tournament_crumb(@tournament.league, @tournament), tournament_entry_crumb(@tournament, @entry) %>
<h1 class="block">Editing Entry on <%= link_to @tournament.formatted_start, league_tournament_path(@tournament.league, @tournament) %></h1>

<div "column1-unit">
<%= error_messages_for :entry %>
</div>
<% unless @entry.errors.empty? %>
	<hr class="clear-contentunit" />
<% end %>

<div "column1-unit">
	<% form_for(@entry, :url => tournament_entry_path(@tournament, @entry)) do |f| %>
		<%= render :partial => 'entries_form', :object => f, :locals => {:tournament => @tournament, :entry -> @entry, :button => "Update"}%>
	<% end %>

	<%= link_to 'Show', tournament_entry_path(@tournament, @entry) %> |
	<%= link_to 'List of All Entries for this Tournament', tournament_entries_path(@tournament) %>
</div>