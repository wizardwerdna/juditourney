<h1 class="pagetitle">Editing tournament for League <%= link_to @league.name, league_path(@league) %></h1>

<div class="column1-unit">
	<%= error_messages_for :tournament %>
</div>
<% unless @league.errors.empty? %>
	<hr class="clear-contentunit" />
<% end %>

<div class="column1-unit">
	<% form_for(@tournament, :url => league_tournament_url(@league, @tournament)) do |f| %>
		<%= f.hidden_field :league_id %>

		<p>
		  <b>Start</b><br />
		  <%= f.datetime_select :start %>
		</p>

		<p>
		  <b>Description</b><br />
		  <%= f.text_area :description %>
		</p>

		<p>
		  <b>Buyin</b><br />
		  <%= f.text_field :buyin %>
		</p>

		<p>
		  <%= f.submit "Update" %>
		</p>
	<% end %>

	<%= link_to 'Show', league_tournament_path(@league, @tournament) %> |
	<%= link_to 'Back', league_tournaments_path(@league) %>
</div>