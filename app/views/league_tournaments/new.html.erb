<% breadcrumbs_for home_crumb, leagues_crumb, league_crumb(@league), league_tournaments_crumb(@league) %>
<h1 class="block">Create New League Tournament</h1>

<% unless @league.errors.empty? %>
<hr class="clear-contentunit" />
<div class="column1-unit">
	<%= error_messages_for :tournament %>
</div>
<hr class="clear-contentunit" />
<% end %>

<div class="column1-unit">
	<% content_tag_for(:tr, tournament = Tournament.new, :style => "display: none;") do -%>
		<td colspan="3">
			<% form_for [@league, tournament] do |f| %>
				<%= render :partial => "league_tournament_form", :object => tournament, :locals => {:f => f, :league => @league, :button_text => "Create"} %>
			<% end %>
		</td>
	<% end %>
	<%= link_to 'Back', league_tournaments_path(@league) %>
</div>