<h1 class="pagetitle"><%= link_to @league.name, league_path(@league) %> Tournaments</h1>
<h1 class="block">Create New League Tournament</h1>

<% unless @league.errors.empty? %>
	<hr class="clear-contentunit" />
<% end %>
<div class="column1-unit">
	<%= error_messages_for :tournament %>
</div>
<% unless @league.errors.empty? %>
	<hr class="clear-contentunit" />
<% end %>

<div class="column1-unit">
	<% form_for(@tournament, :url => league_tournament_path(@league, @tournament)) do |f| %>
		<%= f.hidden_field :league_id %>

		<p>
			<b>Starting date and time</b><br />
			<%= f.datetime_select :start %>
		</p>

		<p>
			 <b>Description</b><br />
			 <%= f.text_area :description %>
		</p>

		<p>
			<b>Buyin</b><br />
			<%= f.text_field :buyin %>
		</p>

		<p>
			<%= f.submit "Create" %>
		</p>
	<% end %>

	<%= link_to 'Back', league_tournaments_path(@league) %>
</div>